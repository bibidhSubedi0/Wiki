@model NoteWiki.Models.NoteContentModel
@{
    ViewData["Title"] = "Note Details";
}

<h2>@Model.NoteName</h2>

<div class="card">
    <div class="card-body">
        <p><strong>Content:</strong></p>
        <p>@Model.Content</p>
        <p><strong>Created At:</strong> @Model.CreatedAt.ToString("g")</p>
        <p><strong>Updated At:</strong> @Model.UpdatedAt.ToString("g")</p>
    </div>
</div>

<a asp-action="Index" class="btn btn-secondary mt-2">Back to Search</a>
