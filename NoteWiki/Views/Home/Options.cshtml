@{
    ViewData["Title"] = "Delete Note";
}

<!-- Breadcrumb -->
<nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb" style="background: none; padding: 0;">
        <li class="breadcrumb-item">
            <a asp-action="Index" asp-controller="Home" style="color: var(--text-muted);">
                Home
            </a>
        </li>
        <li class="breadcrumb-item">
            <a onclick="window.history.back(); return false;" href="#" style="color: var(--text-muted);">
                NoteBox
            </a>
        </li>
        <li class="breadcrumb-item active" aria-current="page" style="color: var(--text-secondary);">
            Delete Note
        </li>
    </ol>
</nav>

<!-- Header -->
<div class="mb-4">
    <h1 class="h2 mb-2" style="color: var(--text-primary); font-weight: 600;">
        Delete Note
    </h1>
    <p class="text-secondary mb-0">Are you sure you want to delete this note? This action cannot be undone.</p>
</div>

<!-- Delete Form -->
<div class="row">
    <div class="col-12">
        <div class="card border-danger">
            <div class="card-body">
                <form asp-controller="Home" asp-action="RemoveBox" method="post">
                    <input type="hidden" name="id" value="@ViewBag.id" />

                    <div class="alert alert-warning mb-3" role="alert">
                        <strong>Warning:</strong> This will permanently remove the NoteBox along with all the notes inside it.
                    </div>

                    <button type="submit" class="btn btn-danger me-2">Remove Note</button>
                    <a onclick="window.history.back(); return false;" href="#" class="btn btn-secondary">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>
